<Window x:Class="Adressbuch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Adressbuch"
        mc:Ignorable="d"
        Title="MainWindow" MaxHeight="450" MaxWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="btnChange" Content="Ändern!" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Bottom"
                Click="btnChange_Click"/>
        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" Grid.RowSpan="2">
            <ContentControl x:Name="Anzeiger"/>
        </Grid>
        <!--<StackPanel Orientation="Horizontal" Margin="10,10,10,10">
            <Button x:Name="btn1" Content="Text" Margin="5,0"/>
            <Button x:Name="btn2" Content="Text2" Margin="5,0"/>
            <Button x:Name="btn3" Content="Text3" Margin="5,0"/>
        </StackPanel>-->
    </Grid>
</Window>
